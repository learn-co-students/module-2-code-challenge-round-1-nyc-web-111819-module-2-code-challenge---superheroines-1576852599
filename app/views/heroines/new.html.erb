<h1>Create A Heroine!</h1>

<% if flash[:messages] %>
<h2>Errors:</h2>
<ul>
<% flash[:messages].each do |error| %>
    <li><%= error %></li>
    <% end %>
    </ul>
    <% end %>

<%= form_for @heroine do |f| %>

    <%= f.label :name %>
    <%= f.text_field :name %><br>

    <%= f.label :super_name %>
    <%= f.text_field :super_name %><br>

    <%= f.label :power_id %>
    <%= f.collection_select :power_id, @powers, :id, :name %><br>
    <br>
    <hr>
    <%= f.submit %>
    <% end %>
