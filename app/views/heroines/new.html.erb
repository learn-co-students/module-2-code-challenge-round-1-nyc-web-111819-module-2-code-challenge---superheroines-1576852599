<% if flash[:messages] %>
<% flash[:messages].each do |error| %>
    <p><%= error %></p>
    <% end %>
    <% end %>

<h1> Heroine Form </h1>

<%= form_for @heroine do |f| %> 

<%= f.label :name %> 
<%= f.text_field :name %> 

<%= f.label :super_name %> 
<%= f.text_field :super_name %> 

<%= f.collection_select :power_id, Power.all, :id, :name %>

<%= f.submit :action => :create %> 

<% end %> 