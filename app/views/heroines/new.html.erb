<h1>Create A New Heroine</h1>

<% if flash[:messages] %>
<h3><font color="red">There were following errors:</font></h3>
    <ul>
    <% flash[:messages].each do |message| %>
    <li><font color="red"><%= message %></font></li>
    <% end %>
   </ul> 
<% end %>

<%= form_for @heroine do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %><br><br>
    <%= f.label :super_name %>
    <%= f.text_field :super_name %><br><br>
    <%= f.label "Choose Her Power" %>
    <%= f.collection_select :power_id, Power.all, :id, :name %><br><br>
    <%= f.submit %>
<% end %>