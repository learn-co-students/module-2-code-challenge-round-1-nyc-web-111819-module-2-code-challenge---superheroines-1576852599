<h2>Create New Heroine</h2>

<ul>
    <% if flash[:messages] %>
        <p>Error Creating Heroine</p>
        <% flash[:messages].each do |errors| %>
            <li><%= errors %></li>
        <% end %>
    <% end %>
</ul>

<%= form_for @heroine do |f| %>

    <%= f.label :name %>
    <%= f.text_field :name %>
    <br>
    <%= f.label :super_name %>
    <%= f.text_field :super_name %>
    <br>
    <%= f.label :power_id %>
    <%= f.select :power_id, @powers.collect {|p| [p.name, p.id] } %>
    <br>
    <%= f.submit "Create Heroine" %>

<% end  %>

<%= button_to "Cancel", heroines_path, method: :get %>