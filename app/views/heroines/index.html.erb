<h2>All Heroines</h2>

<%= form_with(url: "/heroines/search", method: "get") do %>
  <%= label_tag(:q, "Search by Superpower:") %>
  <%= text_field_tag(:q) %>
  <%= submit_tag("Search") %>
<% end %>
<%= render 'refresh' if flash[:refresh_option] == true %>
<hr>




<ul>
  <% @heroines.each do |heroine| %>
    <li>
      <%= link_to(heroine.super_name, heroine_path(heroine)) %>
    </li>
    <br>
  <% end %>
</ul>
<hr>
<%= link_to("Create new Heroine", new_heroine_path) %> | <%= link_to("View List of All Powers", powers_path) %>